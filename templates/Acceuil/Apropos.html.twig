<div class="container-fluid bg-image m-auto" style="margin: 10px 0 90px 0;" id="apropos">
        <div class="m-auto">
            <div class="row" style="width:95%;margin:auto">
                <div class="col-lg-6 my-5 pb-lg-5  wow animated__animated animate__fadeInLeft">
                    <div class="section-title position-relative mb-4">
                        <h1 class="display-6">A PROPOS</h1>
                        <p>
                            <!-- Texte statique pour la description -->
                            {{ institut.description }}
                        </p>
                    </div>
                    <h6 class="mb-4 pb-2 font-weight-bold"></h6>
                    <div class="d-flex align-items-center mb-2">
                        <div class="btn btn-dark mr-4">
                            <i class="fa fa-map-marker-alt text-white"></i>
                        </div>
                        <div class="mt-n1">
                            <p class="m-0">Adresse : {{ institut.siege }}</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-center mb-2">
                        <div class="btn btn-dark mr-4">
                            <i class="fas fa-phone-square text-white"></i>
                        </div>
                        <div class="mt-n1">
                            <p class="m-0">{{ institut.Tel1 }} / {{ institut.Tel2 }}</p>
                        </div>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="btn btn-dark mr-4">
                            <i class="fa fa-envelope text-white"></i>
                        </div>
                        <div class="mt-n1">
                            <p class="m-0"><b style="font-weight: bold;">{{ institut.email }}</b> / {{ institut.email2 }}</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 wow animated__animated animate__fadeInLeft" style="min-height: 500px;">
                    <div class="position-relative h-100">
                        <img class="position-absolute w-100 h-100" src="/Image/IS-INFO.jpg" style="object-fit: cover;" alt="Image de l'institut">
                    </div>
                </div>
            </div>
        </div>
    </div>
