<div class="row mx-0 justify-content-center pt-5" id="formation">
        <div class="col-lg-6">
            <div class="section-title text-center position-relative mb-4">
                <h1 class="display-5 mb-1">FORMATIONS</h1>
                <h4>Elle propose deux types de formations</h4>
            </div>
        </div>
    </div>

    <div class="row mx-0 justify-content-center pt-4">
        {% for formations in formation %}
            <div class="col-lg-6 mb-5">
                <div class="card m-auto shadow d-flex align-items-center justify-content-center text-center bg-outline-primary FI" style="width: 90%; height: 350px;">
                    <div class="card-body d-flex align-items-center justify-content-center text-center">
                        <div style="display: flex; flex-direction: column; row-gap: 5px;">
                            <h5 class="card-subtitle mb-2 text-muted font-weight-bold">{{ formations.nomFormation }}</h5>
                            <h6 class="card-subtitle mb-2 text-muted font-weight-bold">{{ formations.description }}</h6>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>   