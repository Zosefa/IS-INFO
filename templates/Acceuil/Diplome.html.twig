<div class="container-fluid">
        <div class="row mx-0 justify-content-center pt-5" id="diplome">
        <div class="col-lg-6">
            <div class="section-title text-center position-relative mb-4">
                <h1 class="display-5 mb-1" style="text-transform: uppercase;">Diplômes délivrés</h1>
                <h4>Notre Institut délivre les diplômes ci-dessous</h4>
            </div>
        </div>
    </div>

    <div class="row mx-0 justify-content-center pt-4">
        {% for diplomes in diplome %}
            <div class="col-lg-6 mb-5">
                <div class="card m-auto shadow d-flex align-items-center justify-content-center text-center text-white licence" style="width: 90%; height: 350px;background-color:#133FE2 !important;">
                    <div class="card-body d-flex align-items-center justify-content-center text-center gap-3">
                        <i class="fas fa-graduation-cap" style="font-size: 80px;"></i>
                        <div style="display: flex; flex-direction: column; row-gap: 5px;">
                            <h5 class="card-subtitle mb-2 font-weight-bold text-white">{{ diplomes.nomDiplome }}</h5>
                            <h6 class="card-subtitle mb-2 font-weight-bold text-white">{{ diplomes.categorie }}</h6>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>