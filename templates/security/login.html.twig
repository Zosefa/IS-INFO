{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

<div class="sign-in-basic">
  
            <div class="page-header align-items-start min-vh-100" style="background-image: url('https://images.unsplash.com/photo-1497294815431-9365093b7331?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1950&q=80')" loading="lazy">
                <span class="mask bg-gradient-dark opacity-6"></span>
                <div class="container my-auto">
                <div class="row">
                    <div class="col-lg-4 col-md-8 col-12 mx-auto">
                    <div class="card z-index-0 fadeIn3 fadeInBottom">
                        <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                        <div class="shadow-primary border-radius-lg py-3 pe-1" style="background-color:#133FE2 !important;">
                            <h5 class="text-white font-weight-bolder text-center mt-2 mb-0">Veuillez entrer vos identifient</h5>
                            <div class="row ">
                            <div class="col-2 text-center m-auto d-flex align-items-center justify-content-center mt-3">
                                <i class="fas fa-user text-white fs-3 mt-2" style="font-size: 50px !important"></i>
                            </div>
                            </div>
                        </div>
                        </div>
                        <div class="card-body">
                            <form role="form" class="text-start" method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="mb-3">
                                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                                </div>
                            {% endif %}
                                <div class="input-group input-group-outline my-3">
                                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email responsable" required autofocus>
                                </div>
                                <div class="input-group input-group-outline mb-3">
                                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="mot de pass" required>
                                    <input type="hidden" name="_csrf_token"
                                        value="{{ csrf_token('authenticate') }}"
                                    >
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn w-100" style="background-color:#133FE2 !important;color:white;">Connexion</button>
                                </div>
                            </form>
                            <div class="text-center mt-1">
                                <a href="/" class="btn btn-link text-secondary font-weight-bold">
                                <i class="fas fa-arrow-left me-2"></i>
                                Retour Ã  l'accueil
                                </a>
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
                </div>
            </div>
            </div>




{% endblock %}
