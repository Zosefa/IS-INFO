{% extends 'dashboard.html.twig' %}

{% block title %}Institut{% endblock %}

{% block body %}
{{ include('partiel/flash.html.twig') }}
         <div class="mt-4" style="width:90%;margin-left:auto;margin-right:auto">
                <h4 class="text-center mb-5">Information sur l'institut !</h4>
                <div class="w-100 ">
                    <div class="w-25 d-flex justify-content-center align-items-center">
                        <img src="{{ vich_uploader_asset(institut, 'FileImage') }}" style="width:50%">
                        <h5>LOGO ACTUEL</h5>
                    </div>
                            {{ form_start(form) }}
                        <div class="w-100 h-100 d-flex flex-column gap-3">
                            <div class="d-flex justify-content-between">
                                <div class="col-md-6">
                                    {{ form_row(form.NomInstitut) }}
                                </div>
                                <div class="col-md-6">
                                    {{ form_row(form.siege) }}
                                </div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <div class="col-md-6">
                                    {{ form_row(form.email) }}
                                </div> 
                                <div class="col-md-6">
                                    {{ form_row(form.FileImage) }}
                                </div> 
                            </div>
                            <div class="d-flex justify-content-between">
                                <div class="col-md-4">
                                    {{ form_row(form.email2) }}
                                </div> 
                                <div class="col-md-4">
                                    {{ form_row(form.Tel1) }}
                                </div> 
                                <div class="col-md-4">
                                    {{ form_row(form.Tel2) }}
                                </div> 
                            </div>
                            <div class="d-flex justify-content-between"> 
                                <div class="col-md-12">
                                    {{ form_row(form.description) }}
                                </div>
                            </div>
                            <div class="d-flex justify-content-between"> 
                                <div class="col-md-12">
                                    {{ form_row(form.agrement) }}
                                </div>
                            </div>
                            
                            <div class="d-flex justify-content-between">
                                
                                <div class="col-md-4">
                                    <button type="submit" class="btn btn-success">modifier</button>
                                </div>
                            </div>
                        </div>
                {{ form_end(form) }}        
               </div>
            </div>
{% endblock %}